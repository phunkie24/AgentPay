@model AgentPay.Application.DTOs.TransactionDto
@{
    ViewData["Title"] = "Transaction Details";
}

<div class="container">
    <div class="page-header">
        <h1>Transaction Details</h1>
        <a href="/Transaction" class="btn btn-secondary">Back to Transactions</a>
    </div>

    <div class="transaction-details">
        <div class="detail-card">
            <h2>Transaction Information</h2>
            <div class="detail-grid">
                <div class="detail-item">
                    <label>Transaction ID:</label>
                    <code>@Model.Id</code>
                </div>
                <div class="detail-item">
                    <label>Status:</label>
                    <span class="badge badge-@Model.Status.ToLower()">@Model.Status</span>
                </div>
                <div class="detail-item">
                    <label>Amount:</label>
                    <strong class="amount">@Model.Amount.ToString("N8") MNEE</strong>
                </div>
                <div class="detail-item">
                    <label>Agent:</label>
                    <a href="/Agent/Details/@Model.AgentId">@Model.AgentId</a>
                </div>
                <div class="detail-item">
                    <label>Service:</label>
                    <span>@Model.ServiceId</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.TransactionHash))
                {
                    <div class="detail-item full-width">
                        <label>Transaction Hash:</label>
                        <code class="hash">@Model.TransactionHash</code>
                    </div>
                }
                <div class="detail-item">
                    <label>Initiated At:</label>
                    <span>@Model.InitiatedAt.ToString("f")</span>
                </div>
                @if (Model.CompletedAt.HasValue)
                {
                    <div class="detail-item">
                        <label>Completed At:</label>
                        <span>@Model.CompletedAt.Value.ToString("f")</span>
                    </div>
                }
            </div>
        </div>

        <div class="timeline">
            <h3>Transaction Timeline</h3>
            <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-content">
                    <strong>Initiated</strong>
                    <span>@Model.InitiatedAt.ToString("f")</span>
                </div>
            </div>
            @if (Model.CompletedAt.HasValue)
            {
                <div class="timeline-item">
                    <div class="timeline-marker completed"></div>
                    <div class="timeline-content">
                        <strong>@Model.Status</strong>
                        <span>@Model.CompletedAt.Value.ToString("f")</span>
                    </div>
                </div>
            }
            else
            {
                <div class="timeline-item pending">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <strong>Pending...</strong>
                        <span>Awaiting blockchain confirmation</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/signalr.min.js"></script>
    <script>
        const transactionId = '@Model.Id';
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/hubs/agentpay")
            .build();

        connection.on("TransactionUpdated", (data) => {
            if (data.TransactionId === transactionId) {
                location.reload();
            }
        });

        connection.start().catch(err => console.error(err));
    </script>
}
